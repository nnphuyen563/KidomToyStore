<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.HomePageFull"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">
        <androidx.cardview.widget.CardView
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardCornerRadius="100dp"
            android:layout_gravity="center_vertical">
            <ImageView
                android:id="@+id/imvAvatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_avatar"
                />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16sp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Chào buổi sáng"
                android:fontFamily="@font/baloopaaji2medium"
                android:textSize="16sp"
                android:textColor="@color/greyscale_600"
                android:gravity="center_vertical"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Nguyễn Anh Tuấn"
                android:fontFamily="@font/baloopaaji2medium"
                android:textSize="20sp"
                android:textColor="@color/greyscale_900"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:gravity="right">
            <ImageView
                android:layout_width="17.22dp"
                android:layout_height="22.27dp"
                android:src="@drawable/ic_ring"
                android:layout_gravity="center_vertical"
                />
            <ImageView
                android:layout_width="22.16dp"
                android:layout_height="19.8dp"
                android:src="@drawable/ic_heart"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                />


        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_field"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp"
        >
        <EditText
            android:id="@+id/edtSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="@font/baloopaaji2regular"
            android:layout_weight="1"
            android:hint="Nhập ngay mã BANMOI để giảm 10%"
            android:lineBreakWordStyle="none"
            android:padding="21sp"
            android:backgroundTint="@android:color/transparent"
            />
        <ImageView
            android:id="@+id/imvSearch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_search"
            />
        <ImageView
            android:id="@+id/imvFilter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_filter"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            />
    </LinearLayout>
<!--    <GridView-->
<!--        android:id="@+id/gvCategory"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:numColumns="5"-->
<!--        android:layout_marginTop="10sp"-->
<!--        android:layout_marginBottom="10sp"/>-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đề xuất"
            android:textSize="14sp"
            android:fontFamily="@font/baloopaaji2bold"
            android:textStyle="bold"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem tất cả"
            android:textSize="14sp"
            android:fontFamily="@font/baloopaaji2bold"
            android:textStyle="bold"
            android:textColor="@color/primary_500"/>
    </LinearLayout>

</LinearLayout>