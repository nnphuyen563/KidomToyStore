<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.TrackOrder"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarTrackOrder"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:navigationIcon="@drawable/ic_action_back"
        app:contentInsetStartWithNavigation="0dp"
        android:layout_marginBottom="0dp"
        android:elevation="5dp"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Theo dõi đơn hàng"
            android:fontFamily="@font/baloopaaji2bold"
            android:textColor="@color/greyscale_900"
            android:textSize="24sp"
            android:gravity="center" />
    </androidx.appcompat.widget.Toolbar>
    <!--END HEADER-->


    <!--product-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="15dp"
        android:id="@+id/layoutItemReview">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            app:cardCornerRadius="25dp"
            android:elevation="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewDetail"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="10dp"
                    android:elevation="2dp"
                    app:cardCornerRadius="20dp">
                    <ImageView
                        android:id="@+id/imvReviewThumb"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/txtReviewName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tên sản phẩm"
                        android:textColor="@color/greyscale_900"
                        android:textSize="16sp"
                        android:layout_gravity="start"
                        android:fontFamily="@font/baloopaaji2bold"/>

                    <TextView
                        android:id="@+id/txtReviewQty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Số lượng:"
                        android:textColor="@color/greyscale_700"
                        android:textSize="12sp"
                        android:layout_gravity="start"
                        android:fontFamily="@font/baloopaaji2medium"/>

                    <TextView
                        android:id="@+id/txtReviewPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="đ180.000"
                        android:textColor="@color/primary_500"
                        android:textSize="18sp"
                        android:fontFamily="@font/baloopaaji2bold"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin vận chuyển"
        android:textSize="20sp"
        android:textColor="@color/greyscale_900"
        android:fontFamily="@font/baloopaaji2bold"/>
    <!--track_order_inf-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_track_order"
                android:layout_gravity="center" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đã đến trạm giao hàng - 17/12"
                    android:textColor="@color/greyscale_900"
                    android:textSize="14sp"
                    android:fontFamily="@font/baloopaaji2bold"
                    android:layout_marginStart="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đơn hàng đã đến trạm giao hàng Quận Thủ Đức"
                    android:textColor="@color/greyscale_700"
                    android:textSize="12sp"
                    android:fontFamily="@font/baloopaaji2medium"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15:20 PM"
                android:textColor="@color/greyscale_700"
                android:textSize="12sp"
                android:fontFamily="@font/baloopaaji2medium"
                android:layout_weight="0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_track_order"
                android:layout_gravity="center" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đã rời khỏi trung tâm trung chuyển - 16/12"
                    android:textColor="@color/greyscale_900"
                    android:textSize="14sp"
                    android:fontFamily="@font/baloopaaji2bold"
                    android:layout_marginStart="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đơn hàng của bạn đã rời khỏi trung tâm trung chuyển Quận Thanh Xuân"
                    android:textColor="@color/greyscale_700"
                    android:textSize="12sp"
                    android:fontFamily="@font/baloopaaji2medium"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14:40 PM"
                android:textColor="@color/greyscale_700"
                android:textSize="12sp"
                android:fontFamily="@font/baloopaaji2medium"
                android:layout_weight="0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_track_order"
                android:layout_gravity="center" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đã đến trung tâm trung chuyển - 15/12"
                    android:textColor="@color/greyscale_900"
                    android:textSize="14sp"
                    android:fontFamily="@font/baloopaaji2bold"
                    android:layout_marginStart="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đơn hàng của bạn đã đến trung tâm trung chuyển Quận Thanh Xuân"
                    android:textColor="@color/greyscale_700"
                    android:textSize="12sp"
                    android:fontFamily="@font/baloopaaji2medium"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11:30 AM"
                android:textColor="@color/greyscale_700"
                android:textSize="12sp"
                android:fontFamily="@font/baloopaaji2medium"
                android:layout_weight="0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_track_order"
                android:layout_gravity="center" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đang được chuẩn bị - 15/12"
                    android:textColor="@color/greyscale_900"
                    android:textSize="14sp"
                    android:fontFamily="@font/baloopaaji2bold"
                    android:layout_marginStart="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Người bán đang chuẩn bị hàng"
                    android:textColor="@color/greyscale_700"
                    android:textSize="12sp"
                    android:fontFamily="@font/baloopaaji2medium"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:25 AM"
                android:textColor="@color/greyscale_700"
                android:textSize="12sp"
                android:fontFamily="@font/baloopaaji2medium"
                android:layout_weight="0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_track_order"
                android:layout_gravity="center" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đặt hàng thành công - 15/12"
                    android:textColor="@color/greyscale_900"
                    android:textSize="14sp"
                    android:fontFamily="@font/baloopaaji2bold"
                    android:layout_marginStart="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đơn hàng đã được đặt"
                    android:textColor="@color/greyscale_700"
                    android:textSize="12sp"
                    android:fontFamily="@font/baloopaaji2medium"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:04 AM"
                android:textColor="@color/greyscale_700"
                android:textSize="12sp"
                android:fontFamily="@font/baloopaaji2medium"
                android:layout_weight="0"/>
        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:layout_weight="0">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnReturnOrder"
            android:layout_width="170dp"
            android:layout_height="56dp"
            android:background="@drawable/button_unselected_light_red"
            android:text="Trả hàng"
            android:textSize="19sp"
            android:textAllCaps="false"
            android:textColor="@color/primary_500"
            android:fontFamily="@font/baloopaaji2bold" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnComplete"
            android:layout_width="170dp"
            android:layout_height="56dp"
            android:background="@drawable/button_orange"
            android:text="Đã nhận hàng"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:fontFamily="@font/baloopaaji2bold"
            android:layout_marginStart="20dp" />
    </LinearLayout>

</LinearLayout>

